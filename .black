[tool.black]
line-length = 100
target_version = ['py37']
skip-string-normalization = false
include = '\.pyi?$'
exclude = '''
(
  /(
      \.eggs         # exclude a few common directories in the
    | \.git          # root of the project
    | \.mypy_cache
    | \.venv
    | \.circleci
    | build
    | dist
    | docs
    | locale
  )
)
'''
